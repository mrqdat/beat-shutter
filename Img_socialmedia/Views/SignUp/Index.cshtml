@model UserViewModel
@{
    ViewData["Title"] = "Join Shutter";
}
@{
    ViewBag.showtopbar = false;
}
<div class="limiter" style="height:auto;">
    <div class="container-login100">
        <div class="wrap-login100">
            <form class="login100-form validate-form" asp-controller="SignUp" asp-action="signup">

                <span class="login100-form-title p-b-20">
                    <strong>JOIN SHUTTER</strong>
                </span>
                <span class="login100-form-title p-b-20" style="font-size:18px;">
                    Already have an acount? <a asp-controller="Login" asp-action="Index" style="text-decoration: underline;">Login</a>
                </span>

                <div class="login100-form-social flex-c-m">                    
                    <div class="fb-login-button" data-size="large" data-button-type="continue_with" data-layout="default" data-auto-logout-link="false" data-use-continue-as="false" data-width=""></div>
                </div>

                <div class="text-center p-t-20 p-b-20">
                    <span class="txt2">
                        Or
                    </span>
                </div>

                <div class="wrap-input100 validate-input">
                    <input asp-for="first_name" class="input100" type="text" name="firstname" required>
                    <span class="focus-input100"></span>
                    <span asp-validation-for="first_name" class="label-input100">First name</span>
                </div>

                <div class="wrap-input100 validate-input">
                    <input asp-for="last_name" class="input100" type="text" name="lastname">
                    <span class="focus-input100"></span>
                    <span asp-validation-for="last_name" class="label-input100">Last Name</span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                    <input asp-for="email" class="input100" type="text" name="email">
                    <span class="focus-input100"></span>
                    <span asp-validation-for="email" class="label-input100">Email</span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Username is required">
                    <input asp-for="username" class="input100" type="text" name="Username">
                    <span class="focus-input100"></span>
                    <span asp-validation-for="username" class="label-input100">Username</span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    <input asp-for="password" class="input100" type="password" name="pass">
                    <span class="focus-input100"></span>
                    <span asp-validation-for="password" class="label-input100">Password</span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Confirm password doesn't match">
                    <input asp-for="confirm_password" class="input100" type="password" name="confirm_pass">
                    <span class="focus-input100"></span>
                    <span asp-validation-for="confirm_password" class="label-input100">Confirm password</span>
                </div>
                @*<div class="flex-sb-m w-full p-t-3 p-b-32">
                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                            <label class="label-checkbox100" for="ckb1">
                                Remember me
                            </label>
                        </div>

                        <div>
                            <a href="#" class="txt1">
                                Forgot Password?
                            </a>
                        </div>
                    </div>*@

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn" type="submit" value="User">
                        Join
                    </button>
                </div>
            </form>

            <div class="login100-more" style=" background-image: url('images/41971882_696072084101621_3714114531614523392_o.jpg');">
            </div>
        </div>
    </div>
</div>
