@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Shutter ";
}
    <link rel="stylesheet" href="~/css/site.css" />
   
    <style>
    body {
        margin: 0;
        padding: 0;
    }

    #photos {
        line-height: 0;
        -webkit-column-count: 3;
        -webkit-column-gap: 20px;
        -moz-column-count: 3;
        -moz-column-gap: 20px;
        column-count: 3;
        column-gap: 20px;
        margin: 50px 40px 0px 40px;
    }

        #photos img {
            width: 100% !important;
            height: auto !important;
            margin-bottom: 20px;
        }

    .content:hover{
        opacity:0.7;
    }

    .background {
        margin-bottom: 20px;
        opacity: 0.9;
        position: relative;
    }

    .daily-background img {
        width: 100%;
        height: 100%;
        overflow: hidden;
        object-fit: cover;
        z-index: -1;
    }

    .bg_content_centered {
        display: flex;
        
        top: 70px;
        z-index: 3;
        max-width: 650px;
        width: 100%;
        position: absolute;
    }

    .bg_title {
        color: white;
    }

        .search-bar {
            justify-content: center;
            align-content: center;
            display: inline-block;
            z-index: 1;
        }

    .search-bar_container {
        display: inline-block;
        width: 100%;
        border: none;
        border-radius: 5px;
        vertical-align: middle;
    }

    .search_action {
        display: inline-block;
        vertical-align: middle;
    }

    .content{
        position:relative;
    }


    .btn_love {
        transition: .5s ease;
        opacity: 0;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        text-align: center;
    }
</style>

<header class="background">
    <div class="daily-background">
        <img src="~/images/pagoda.jpg" />
    </div>
    <div></div>
    <section class="bg_content_centered">
        <h1 class="bg_title">All the best free stock photos and images<br />Shared by talented creators</h1>
        <div class="bg_search_container">
            <form class="search-bar" method="get" autocomplete="off" action="">
                <button class="search_action" title="search">
                    <i class="svg-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"></path></svg>
                    </i>
                </button>
                <div class="search-bar_container">
                    <input class="search" autofocus placeholder="Search for free photos" type="search" required="required" />
                </div>
            </form>
        </div>
    </section>
</header>

