<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="shortcut icon" type="image/x-icon" href="~/shutter.ico" />
    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/css/util.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" type="text/css" href="~/fonts/Linearicons-Free-v1.0.0/icon-font.min.css" />
    <link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css" />
    <link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css" />
    <link rel="stylesheet" type="text/css" href="~/vendor/animsition/css/animsition.min.css" />
    <link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css" />

</head>
<body>
    @if (ViewBag.showtopbar ?? true)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white mb-3">
                <div class="container" style="margin:0;padding:0;max-width:1390px;">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="margin-left:0;">
                        <div class="main-nav-bar-logo" title="All stock photo">
                            <img src="~/shutter.svg" alt="Logo" width="35" />
                        </div>
                    </a>
                    <div id="nav-item" class="nav-item justify-content-start">
                        <div class="nav-search">
                            <button type="submit" class="navsearchButton">
                                <i class="fa fa-search"></i>
                            </button>
                            <input type="text" class="navsearchTerm" placeholder="Search for free photo and images">
                        </div>
                    </div>
                    <div style="display:flex;">
                        <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-label="Toggle navigation" style="border:none;">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </div>
                        <div class="navbar-collapse d-sm-inline-flex">
                            <ul class="navbar-nav flex-grow-1 justify-content-end ">
                              

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Explore</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Upload" data-target="#upload-modal" data-toggle="modal">Upload</a>
                                </li>

                                <li class="nav-item"hidden>
                                    <span class="line"></span>
                                </li>

                                <li class="nav-item"hidden>
                                    <a class="nav-link " asp-area="" asp-controller="Login" asp-action="Index" >Log in</a>
                                </li>
                                @*<li class="nav-item">
            <div class="dropdown">
                <button type="button" class="dropdown" data-toggle="dropdown" style="background: none;border: none; top: 3px;position: relative;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" ">
                        <path d="M6 10c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm12 0c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm-6 0c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z"></path>
                    </svg>
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="#" asp-controller="Home" asp-action="about">About</a>
                    <a class="dropdown-item" href="#" asp-controller="Home" asp-action="bkog">Blog</a>
                    <a class="dropdown-item" href="#" asp-controller="Home" asp-action="community">Community</a>
                    <a class="dropdown-item" href="#" asp-controller="Home" asp-action="Lisense">Lisense</a>                                        <a class="dropdown-item" href="#" asp-controller="Home" asp-action="help">Help</a>
                </div>
            </div>
        </li>*@

                                <li class="nav-item" style="margin:7px 25px 7px 0;" >
                                    <a class="notification" asp-area="" asp-controller="Notification" asp-action="Index">
                                        <svg class="bi bi-bell-fill" width="34" height="24" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2zm.995-14.901a1 1 0 1 0-1.99 0A5.002 5.002 0 0 0 3 6c0 1.098-.5 6-2 7h14c-1.5-1-2-5.902-2-7 0-2.42-1.72-4.44-4.005-4.901z" />
                                        </svg>
                                    </a>
                                </li>

                                <li class="nav-item avatar" style="margin-right:0;">
                                    <a href="javascript:void(0);" class="btn-user media align-items-center" data-toggle="dropdown" data-sidebar="true" aria-expanded="false">
                                        <img class="mr-2" src="~/images/man.png" width="32" height="32" alt="avatar">
                                    </a>
                                </li>

                                <li class="nav-item" style="margin-right:0px;" hidden>
                                    <a class="btn btn-success text-white" asp-area="" asp-controller="SignUp" asp-action="Index">Join free</a>
                                </li>
                            </ul>
                        </div>
                        

                    
                </div>

            </nav>
        </header>
    }
    @*create modal*@
    <div class="upload-modal" id="upoad-modal">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content">
                <div class="modal-body">

                </div>

                <div class="modal-footer">
                    <div class="modal-footer-control">
                        <div class=""></div>
                        <div class="">
                            <div class="control">
                                <button class="btn-outline-dark">Cancel</button>
                                <button class="btn-outline-dark" asp-controller="Post" asp-action="post">Publish your photos</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <main role="main" class="pb-3" style="padding-bottom:0px !important;">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2020 - Img_socialmedia - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js">
    </script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js">
    </script>
    <script src="~/js/site.js" asp-append-version="true">
    </script>

    @RenderSection("Scripts", required: false)



</body>
</html>
