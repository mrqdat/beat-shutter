@model Img_socialmedia.Models.UserViewModel
@{
    ViewData["Title"] = "password";
}
@{ 
    ViewBag.showsearchbar = false;
}
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-4 pb-5">
                <!-- Account Sidebar-->
                <div class="author-card pb-3">
                   
                        <div class="author-card-avatar">

                            <img src="~/images/man.png" alt="Daniel Adams">
                        </div>
                        <div class="author-card-details">
                            <h5 class="author-card-name text-lg">Daniel Adams</h5><span class="author-card-position">Joined February 06, 2017</span>
                        </div>
                    
                </div>
                <div class="wizard">
                    <nav class="list-group list-group-flush">

                        <a class="list-group-item" asp-controller="User" asp-action="editprofile">
                            <i class="fe-icon-user text-muted"></i>Profile Settings
                        </a>
                        <a class="list-group-item" asp-controller="User" asp-action="email">
                            <i class="fe-icon-map-pin text-muted"></i>Change Email
                        </a>

                        <a class="list-group-item  active" asp-controller="User" asp-action="password">
                            <i class="fe-icon-map-pin text-muted"></i>Change Password
                        </a>


                        <a class="list-group-item" asp-controller="User" asp-action="close">
                            <i class="fe-icon-map-pin text-muted"></i>Close account
                        </a>
                    </nav>
                </div>
            </div>
            <!-- Profile Settings-->
            <div class="col-lg-8 pb-5">
                <form class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Password" for="account-fn">Current password</label>
                            <input asp-for="Password" class="form-control" type="text" id="account-fn" value=" " required="">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label   for="account-ln">New password</label>
                            <input   class="form-control" type="text" id="account-ln" value=" " required="">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="PasswordConfirm" for="account-email">Password confirmation</label>
                            <input asp-for="PasswordConfirm" class="form-control" type="email" id="account-email" value=" " required="">
                        </div>
                    </div>
                    

                    <div class="col-12">
                        <hr class="mt-2 mb-3">
                        <div class="d-flex flex-wrap justify-content-between align-items-center">                           
                            <button class="btn btn-style-1 btn-primary" type="submit" data-toast="" data-toast-position="topRight" data-toast-type="success" data-toast-icon="fe-icon-check-circle" data-toast-title="Success!" data-toast-message="Your profile updated successfuly.">Change password</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

